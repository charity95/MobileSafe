<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        style="@style/TitleStyle"
        android:text="手机防盗"/>
    <RelativeLayout 
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textSize="18sp"/>
        <TextView 
            android:id="@+id/tv_safe_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="999"
            android:textSize="18sp"/>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@id/tv_safe_number"
            android:background="@drawable/listview_divider"/>
    </RelativeLayout>
    <RelativeLayout 
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗保护是否开启"
            android:textSize="18sp"/>
        <ImageView 
            android:id="@+id/iv_lock"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/lock"/>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_lock"
            android:background="@drawable/listview_divider"/>
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/tv_reset_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重新进入设置向导"
        android:background="@drawable/selector_reset_setup"
        android:textSize="18sp"
        android:padding="5dp"/>
    
    <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="功能简介"
            android:background="#ccc"
            android:textColor="#000"
            android:textSize="18sp"
            android:padding="5dp"
            />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS追踪：#*location*#"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:gravity="center"
        android:textSize="18sp"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放报警音乐：#*alarm*#"
        android:paddingTop="3dp"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:gravity="center"
        android:textSize="18sp"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="远程删除数据：#*wipedata*#"
        android:paddingTop="3dp"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:gravity="center"
        android:textSize="18sp"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="远程锁屏：#*lockscreen*#"
        android:paddingTop="3dp"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:gravity="center"
        android:textSize="18sp"/>
    
</LinearLayout>